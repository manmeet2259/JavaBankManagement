		textField.setBounds(247, 29, 180, 25);
		panel.add(textField);
		
		JButton btnCancel = new JButton("Cancel");
		btnCancel.setFont(new Font("Tahoma", Font.BOLD, 14));
		btnCancel.setBounds(650, 24, 150, 35);
		panel.add(btnCancel);
